- content_for(:title, "Sign In")

.card.shadow-sm
  .card-body.p-4
    %h1.h4.mb-4.text-center Sign In

    = form_with url: session_path, class: "mb-3" do |f|
      .mb-3
        = f.label :email_address, "Email address", class: "form-label"
        = f.email_field :email_address, class: "form-control form-control-lg", required: true, autofocus: true, autocomplete: "username", placeholder: "you@example.com"

      = f.submit "Send verification code", class: "btn btn-primary btn-lg w-100"

    %p.text-center.text-muted.mb-0
      New here?
      = link_to "Create an account", new_signup_path
