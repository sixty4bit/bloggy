- content_for(:title, "Sign Up")

.card.shadow-sm
  .card-body.p-4
    %h1.h4.mb-4.text-center Create Account

    = form_with url: signup_path, class: "mb-3" do |f|
      .mb-3
        = f.label :email_address, "Email address", class: "form-label"
        = f.email_field :email_address, class: "form-control form-control-lg", required: true, autofocus: true, autocomplete: "username", placeholder: "you@example.com"

      = f.submit "Continue", class: "btn btn-primary btn-lg w-100"

    %p.text-center.text-muted.mb-0
      Already have an account?
      = link_to "Sign in", new_session_path
