- content_for(:title, "Complete Setup")

.card.shadow-sm
  .card-body.p-4
    %h1.h4.mb-4.text-center Complete Your Account

    = form_with url: signup_completion_path, scope: :signup, class: "mb-3" do |f|
      .mb-3
        = f.label :full_name, "Your name", class: "form-label"
        = f.text_field :full_name, class: "form-control form-control-lg", required: true, autofocus: true

      .mb-3
        = f.label :account_name, "Organization name", class: "form-label"
        = f.text_field :account_name, class: "form-control form-control-lg", required: true

      = f.submit "Create Account", class: "btn btn-primary btn-lg w-100"
