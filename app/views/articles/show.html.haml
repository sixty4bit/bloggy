- content_for(:title, @article.title)

.container.py-4
  .row
    .col-lg-8
      %article
        %header.mb-4
          %h1= @article.title
          %p.text-muted
            by #{@article.user.name}
            = " \u2022 "
            - if @article.published?
              Published #{time_ago_in_words(@article.published_at)} ago
            - else
              %span.badge.bg-secondary Draft

        .article-body
          = simple_format(@article.body)

      %hr

      .d-flex.gap-2
        = link_to "Edit", edit_article_path(@article), class: "btn btn-outline-primary"
        = link_to "Delete", @article, method: :delete, class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?" }
        = link_to "Back to Articles", articles_path, class: "btn btn-outline-secondary"
